{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    { 
      "name": "Debug React Vite", 
      "request": "launch", 
      "type": "pwa-chrome", 
      "url": "http://localhost:5173", 
      "webRoot": "${workspaceFolder}/frontend-web/src" },
    {
      "name": "Attach to Hermes application",
      "request": "attach",
      "type": "reactnativedirect",
      "cwd": "${workspaceFolder}/2023/packages/app",
    },
    {
      "name": "Debug Android Hermes",
      "request": "launch",
      "type": "reactnativedirect",
      "cwd": "${workspaceFolder}/2023/packages/app",
      "platform": "android"
    },

    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "server/app/app.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--host=0.0.0.0"],
      "jinja": true,
      "autoStartBrowser": false
    }
  ]
}
